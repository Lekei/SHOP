<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Style.css">
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Bars Group</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Главная страница</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Cars/list">Все автомобили</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Cars/List/fuel">Бензиновые</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Cars/List/electro">Электрические</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/ShopCart/Index">Корзина</a>
                        </li>
                    </ul>
                    <form class="d-flex" method="get" asp-controller="Home" asp-action="Index">
                        <input value="@ViewData["Getemployeedetails"]" name="Empsearch"  class="form-control me-2" type="search" placeholder="Поиск" aria-label="Search">
                        <button value = "Search" class="btn btn-outline-success" type="submit">Поиск</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <div class="container mt-5">
        @RenderBody()
    </div>
    </div>
    <footer class="container">
        <p class="float-end"><a href="#">Back to top</a></p>
        <p>© 2022 Bars Group, Inc. · <a href="#">Соглашение</a></p>
    </footer>
</body>
</html>